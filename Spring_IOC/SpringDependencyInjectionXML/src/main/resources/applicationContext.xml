<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:person.properties"/>

    <bean id="profession" class="org.example.bekhzod.Accountant">
    </bean>

    <bean id="person" class="org.example.bekhzod.Person">
        <constructor-arg index="0" value="${person.name}"/>
        <constructor-arg index="1" value="${person.age}"/>
        <constructor-arg index="2" ref="profession"/>
    </bean>


</beans>